# Start from a minimal Python image
FROM python:3.11-slim AS base

# Environment settings
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# Set working directory
WORKDIR /app

# Install dependencies first (for caching efficiency)
COPY requirements.txt .
RUN pip install --upgrade pip && pip install -r requirements.txt

# Copy in the rest of the app
COPY . .

# Create a non-root user and switch to it
RUN useradd -m appuser
USER appuser

# Expose port (Flask default 5000)
EXPOSE 5000

# Use Gunicorn to serve the app
# Bind to all interfaces on port 5000 with 4 worker processes
CMD ["gunicorn", "--bind", "0.0.0.0:4225", "--workers", "1", "full_api:app"]